{
    "name": "@9elt/boolbytes",
    "version": "0.1.0",
    "description": "Convert a boolean array to bytes and vice versa",
    "main": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
    },
    "scripts": {
        "test": "bun test.js",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' >dist/esm/package.json",
        "build": "rm -rf dist && npm run build:cjs && npm run build:esm",
        "pub": "npm run build && npm run test && npm publish"
    },
    "author": "Lorenzo Cicuttin",
    "license": "MIT",
    "keywords": [
        "bool",
        "boolean",
        "array"
    ],
    "readme": "./README.md",
    "homepage": "https://github.com/9elt/boolbytes#readme",
    "repository": "github:9elt/boolbytes"
}
